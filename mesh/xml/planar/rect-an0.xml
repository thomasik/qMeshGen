<?xml version="1.0" encoding="UTF-8"?>
<meshdoc xmlns="http://www.icsr.agh.edu.pl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<header>
		<creator>Tomasz Jurczyk</creator>
		<version>1.0</version>
		<description>anisotropic control space for plane</description>
	</header>
	<model>
		<vertices>
			<vertex vid="1"> <x>0</x> <y>0</y> </vertex>
			<vertex vid="2"> <x>2</x> <y>0</y> </vertex>
			<vertex vid="3"> <x>2</x> <y>1</y> </vertex>
			<vertex vid="4"> <x>0</x> <y>1</y> </vertex>
		</vertices>

		<faces>
			<face fid="1">
				<vertex vid="1" />
				<vertex vid="2" />
				<vertex vid="3" />
				<vertex vid="4" />
			</face>
		</faces>
		
	</model>

	<sizing>
		<sources>
			<source2d fid="1" type="analytic">
				<metric>
					<lx>0.01</lx>
					<ly>0.11-0.05*u</ly>
					<angle>PI/6</angle>
				</metric>
			</source2d>
		</sources>
	</sizing>
</meshdoc>
