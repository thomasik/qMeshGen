DBox MeshDomainVolume::getBoundingBox() const
{
	if(m_mesh) 
		return m_mesh->getBoundingBox();
	else{
		DBox box;
		for(int i = 0; i < face_count; i++){
			box.addBox(faces[i]->getBoundingBox());
		}
		return box;
	}
}

void MeshDomainVolume::clearDiscretization()
{
